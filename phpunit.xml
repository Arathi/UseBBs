<?xml version="1.0"?>
<phpunit
	bootstrap="includes/init.php"
	colors="true"
	stopOnError="true"
	stopOnFailure="false"
	verbose="true"
	strict="true">
	<logging>
		<log
			type="coverage-html"
			target="coverage"
			charset="UTF-8"
			yui="true"
			highlight="true"
			lowUpperBound="70"
			highLowerBound="90" />
	</logging>
	<filter>
		<blacklist>
			<directory>/opt/local/share/pear</directory>
		</blacklist>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">.</directory>
			<exclude>
				<directory suffix="Test.php">.</directory>
				<directory>Tests</directory>
			</exclude>
		</whitelist>
	</filter>
	<php>
		<const name="USEBB_UNIT_TESTS" value="true" />
	</php>
</phpunit>
